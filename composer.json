{
    "name": "soloterm/screen",
    "description": "A terminal renderer written in pure PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Francis",
            "email": "aarondfrancis@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "soloterm/grapheme": "^v1.0.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5|^11",
        "symfony/console": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "SoloTerm\\Screen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoloTerm\\Screen\\Tests\\": "tests/"
        },
        "files": [
            "tests/Support/helpers.php"
        ]
    },
    "scripts": {
        "test": "php bin/test",
        "test:screenshots": "php bin/test --screenshots",
        "test:missing": "php bin/test --missing",
        "test:failures": "php bin/test -- --order-by=defects --stop-on-failure",
        "test:fixtures": "php bin/check-fixtures"
    },
    "config": {
        "process-timeout": 0
    }
}
